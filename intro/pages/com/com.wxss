scroll-view {
	min-height: 100%;
	text-align: left;
	color:#333;
}
.header {
	margin:10px  20px 0 20px;
	padding-bottom:5px;
	border-bottom: thin dashed #E5E5E5;
}
.header .l {
	width:60%;
	text-align: left;
}
.header .r {
	flex:1;
	text-align: right;
}
.l .title {
	font-size:16px;
	
	padding:5px 0;
}
.l .text {
	font-size:12px;
	color:#999;
}
.r image {
	width:72px;
	height:72px;
}

.other {
	margin:0 24px;
	font-size:13px;
}
.line {
	line-height: 48px;
	position: relative;
}
.svg {
	width:20px;
	height:20px;
	vertical-align: middle;
	margin-right:6px;
}
.gt {
	position: absolute;
	top:2px;
	right:3px;
	font-size:16px;
	color:#999;
}

.con-imgs {
	width:96%;
	margin:0 auto;
}
.con-img {
	width:100px;
	height:88px;
}