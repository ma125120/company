<scroll-view scroll-y="true" scroll-top='0' class='main'>
	<block wx:for="{{myCars}}" wx:key="{{item.id}}">
		<view class="item">
			<view class="l">
				<image src='{{item.img1}}'></image>
			</view>
			<view class="m">
				<view><text class="gray">车型：</text>{{all[item.i].name}}</view>
				<view><text class="gray">品牌：</text>{{item.brand}}</view>
				<view><text class="gray">出租方式：</text>{{item.price}}/月租</view>
				<view><text class="gray">座位数：</text>{{item.seat}}</view>
			</view>
			<navigator url='../editInfo/editInfo?id={{item.RUID}}' class="r"><text class="gray">修改</text></navigator>
		</view>
		<view class="bor_gray"></view>
	</block>
	
</scroll-view>

