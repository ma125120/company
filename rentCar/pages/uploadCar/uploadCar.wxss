scroll-view {
	min-height: 100%;
	color:#ABABAB;
}
.body {
	background: #fff;
}
form {
	text-align: left;
	font-size:14px;
}
.page-main {
	width:90%;
	box-sizing: border-box;
	margin:0 auto;
	padding:36px 0;
}
.input {
	display: block;
	width:100%;
	box-sizing: border-box;
	height:36px;
	color:#000;
	box-sizing: border-box;
	border:thin solid #bbb;
	padding-left:16px;
	margin-bottom: 24px;
	border-radius: 5px;
}
.place {
	color:#bbb;
}
.title {
	padding-left:8px;
  margin-bottom:10px;
}
.none-pic {
	display: inline-block;
	text-align:center;
	line-height: 150px;
	margin-right: 10px;
	font-size:150px;
	vertical-align: middle;
}
view.none-pic {
	color:#fff;
	position: relative;
}
view.none-pic image {
	position: absolute;
	top:0;
	left:0;
}
view.none-pic image,
.none-pic {
	width:150px;
	height:150px;
}
.foot {
		background: #F5F5F5;
		padding:36px 0 80px 0;
}
.btn {
	width:96%;
	line-height: 42px;
	color:#fff;
	background: #10A5F5;
	margin:0 auto;
}

.arrow {
	position: relative;
	line-height:36px;
}
.arrow:after {
	content:'';
	border-top: 8px solid #888;
	border-left:8px solid transparent;
	border-right:8px solid transparent;
	position: absolute;
	top:14px;
	right:10px;
	margin-left: 10rpx;
}
.comment {
	padding-top:10px;
	color:#000;
}
.my-flex {
	display: flex;
}
.com {
	width:30%;
	padding-top: 8px;
	padding-left:10px;
}
.my-flex .input {
	flex:1;
}

.add {
	position: absolute;
	top:50%;
	left:50%;
	color:#fff;
	z-index:100;
	transform: translate(-50%,-50%);
}