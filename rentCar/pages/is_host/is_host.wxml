<scroll-view scroll-y="true" scroll-top='0' class='main'>
	<swiper indicator-dots="true" autoplay="true" interval='3000'  circular="true">
		<swiper-item wx:for="{{slides}}" wx:key="{{index}}">
			<image src="{{item}}" class='s_img'></image>
		</swiper-item>
	</swiper>

	<view class="content">
		<view class="body">
			<view class="items" wx:for="{{modules}}" wx:key="{{index}}">
				<view class="{{index%2==0?'odd':''}} item" bindtap='goTo' data-url='{{item.url}}'>{{item.title}}</view>
			</view>
		</view>

		<view class="footer">
			<view class="title">通知:</view>
			<view class="notices">
				<view wx:for="{{notices}}" wx:key="{{index}}" class='my-item'>{{item}}</view>
			</view>
		</view>
	</view>
	
</scroll-view>

